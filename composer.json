{
    "name": "symplely/spawn",
    "description": "An simply `uv_spawn` wrapper API to execute and manage sub-processes, parallel/asynchronous PHP for Blocking I/O.",
    "keywords": [
        "process",
        "parallel",
        "spawn",
        "uv_spawn",
        "libuv",
        "command",
        "task",
        "sub process",
        "async"
    ],
    "homepage": "https://github.com/symplely/spawn",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Lawrence Stubbs",
            "email": "lstubbs@techno.express"
        }
    ],
    "require": {
        "php": ">7.2",
        "opis/closure": "^3.5.1",
        "symfony/process": "^5.0.6"
    },
    "autoload": {
        "files": [
            "Spawn/Core.php"
        ],
        "psr-4": {
			"Async\\Spawn\\": "Spawn/"
		}
    },
    "require-dev": {
        "phpunit/phpunit": "^6 | ^7 | ^8"
    },
    "autoload-dev": {
        "psr-4": {
            "Async\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --bootstrap vendor/autoload.php tests"
    }
}
